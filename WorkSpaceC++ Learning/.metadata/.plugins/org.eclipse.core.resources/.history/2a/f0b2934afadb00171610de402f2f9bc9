#include<iostream>
using namespace std;

class Shape
{
	int lenth;;
public:
	virtual void draw()==0
	{
		cout<<"Base Shpe";
	}
};

class square: public Shape
{
public:
	virtual void draw()
	{
		cout<<"Square"<<endl;
	}

};
class Circle: public Shape
{
public:
	virtual void draw()
	{
		cout<<"circle"<<endl;
	}
};

