#include<iostream>
#include<pthread.h>
#include<unistd.h>

using namespace std;

void * Thread_1(void*)
{
	while(1)
	{
		cout<<"Common resource :Printer  use by Thread1\n";
		sleep(4);
	}
	pthread_exit(NULL);
}
void Thread_2()
{
	while(1)
	{
		cout<<"Common resource :Printer  use by Thread2\n";
		sleep(2);
	}
	pthread_exit(NULL);
}

int main()
{
	pthread_t pid1;
	pthread_t pid2;
	pthread_create(&pid1,NULL,Thread_1,NULL);
	pthread_create(&pid2,NULL,Thread_2,NULL);
	pthread_join(pid1,NULL);
	pthread_join(pid2,NULL);
}




