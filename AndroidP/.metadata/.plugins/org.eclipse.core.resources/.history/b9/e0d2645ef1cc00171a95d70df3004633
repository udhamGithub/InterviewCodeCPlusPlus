#include<iostream>
using namespace std;

template <typename T>
class ArrayClass
{
	T *ptr;
	int size;
public:
	ArrayClass(int xArray[],int  vsize)
	{
		ptr= new int[vsize];
		size=vsize;

		for(int i=0;i<vsize;i++)
		{
			ptr[i]=	xArray[i];
		}
		cout<<"Aconstructyre";
	}
	void print()
	{
		for(int i=0;i<size;i++)
		{
			cout<< ptr[i];
		}

	}
};
int main()
{
	int ptr=NULL;
	int A[]={1,2,3,4,5};
	ArrayClass  obj(A,5);
	obj.print();
}
